<odoo>
    <data>
        <record id="view_company_form_copy_ldm" model="ir.ui.view">
            <field name="name">res.company.form.copy_ldm</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form" position="inside">
                    <header>
                        <button name="action_copy_ldm" class="oe_highlight" string="Copiar LdM" type="object" confirm="Esta acción es irreversible y copiará las listas de materiales de la Compañía copia LdM seleccionada. ¿Desea continuar?"/>

                        <field name="state" widget="statusbar" statusbar_visible="no_copy,copied"/>
                    </header>
                </xpath>

                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="empresa_copy_ldm" string="Compañía copia LdM"/>
                    <field name="copy_ldm" string="Listas de materiales asociadas a Compañía copia LdM" widget="many2many"/>

                    <group class="invoice-residual-view">
                        <field name="copy_ldm" widget="many2many">
                            <tree string="LdM" editable="top">
                                <field name="company_id" invisible="1"/>
                                <field width="300px"  name="product_tmpl_id" string="Área"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>